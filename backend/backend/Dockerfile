# ğŸ Use lightweight Python base image
FROM python:3.11-slim

# ğŸ§­ Set working directory
WORKDIR /app

# ğŸ§© Install dependencies required for Django + psycopg2/Pillow
RUN apt-get update && apt-get install -y \
    build-essential \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“„ Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

# ğŸ“‚ Copy backend project files
COPY . .

# ğŸŒ Expose Django port
EXPOSE 8000

# ğŸš€ Start Django server
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
